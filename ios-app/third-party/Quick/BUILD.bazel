load("@build_bazel_rules_swift//swift:swift.bzl", "swift_library")

swift_library(
    name = "Quick",
    module_name = "Quick",
    srcs = glob([
        "**/*.swift"
    ]),
    deps = [":Quick_ObjectiveC"],
    visibility = ["//visibility:public"],
)

objc_library(
    name = "Quick_ObjectiveC",
    srcs = glob(["**/*.{h,m}"]),
    copts = ["-fmodule-name=Quick"],
    sdk_frameworks = ["XCTest"],
)
