load("@build_bazel_rules_swift//swift:swift.bzl", "swift_library")

swift_library(
    name = "Quick",
    module_name = "Quick",
    srcs = glob([
        "**/*.swift"
    ], exclude = [
        "Quick/Configuration/QuickConfiguration.swift",
        "Quick/QuickSpec.swift",
        "Quick/QuickMain.swift",
    ]),
    deps = [":Quick_ObjectiveC"],
)

objc_library(
    name = "Quick_ObjectiveC",
    srcs = glob(["**/*.{h,m}"]),
    copts = ["-fmodule-name=Quick"],
    sdk_frameworks = ["XCTest"],
)
